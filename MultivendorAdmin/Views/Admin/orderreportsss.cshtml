@model MultivendorEcommerceStore.DB.ViewModel.OrderReportViewModel

@{
    ViewBag.Title = "orderreportsss";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!--main content start-->
<section class="site-min-height">
    <!-- page start-->
    <section class="panel">

        <div class="adv-table editable-table ">
            <div class="clearfix">

                <div class="btn-group pull-right">
                    <h1><span><i onclick="Print('OrdersToPrint')" class="fa fa-print pull-right" style="cursor:pointer" title="Print"></i></span></h1>
                </div>
            </div>
            <div class="space15"></div>

            <div class="table-responsive" id="OrdersToPrint">

                <div style="text-align:center; font-size:20px"><strong>Customer's Orders Report</strong></div>
                <br />
                <br />

                <table class="table table-striped table-hover table-bordered" @*id="editable-sample"*@ style="text-align:center">
                    <thead>
                        <tr style="text-align:center">
                            <th>
                                @Html.DisplayName("Customer Name")
                            </th>
                            <th>
                                @Html.DisplayName("Email")
                            </th>
                            <th>
                                @Html.DisplayName("Mobile #")
                            </th>
                            <th>
                                @Html.DisplayName("Added On")
                            </th>
                            <th>
                                @Html.DisplayName("Tax")
                            </th>
                            <th>
                                @Html.DisplayName("Shipping")
                            </th>
                            <th>
                                @Html.DisplayName("Sub-Total")
                            </th>
                            <th>
                                @Html.DisplayName("Total")
                            </th>
                            <th>
                                @Html.DisplayName("Detail")
                            </th>

                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model.Orders)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CustomerName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Email)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Mobile)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CreatedOn)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Tax)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Shipping)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.SubTotal)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Total)
                                </td>

                                <td>
                                    @Html.ActionLink(" ", "OrderDetails", "Admin", new { orderID = item.OrderID }, new { @class = "glyphicon glyphicon-eye-open" })
                                </td>
                            </tr>
                        }
                    </tbody>

                </table>

            </div>
        </div>



    </section>
    <!-- page end-->
</section>
<!--main content end-->


<!--footer start-->
<footer class="site-footer">
    <div class="text-center">
        2017 &copy; FineCollection by IT Specialists.
        <a href="#" class="go-top">
            <i class="fa fa-angle-up"></i>
        </a>
    </div>
</footer>
<!--footer end-->

<script src="~/Scripts/jquery-3.1.1.js"></script>

<script type="text/javascript">
    $(document).ready(function () {
        $('.pickdate').datepicker({
            format: 'dd-mm-yyyy',
            autoclose: true,
            todayHighlight: true
        });
    });

    $(document).ready(function () {
        $("#From").val("");
        $("#To").val("");
    });

</script>