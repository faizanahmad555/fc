<div class="row">

    <section class="panel col-lg-12">
        <header class="panel-heading">
            New Orders
        </header>
        <div class="panel-body">
            <div class="col-lg-12">
                <div class="dashboard-graph graph_chart" id="ChartNewOrdersContainer">
                </div>
            </div>
        </div>
    </section>

</div>

<div class="row">

    <section class="panel col-lg-6">
        <header class="panel-heading">
            New Products
        </header>
        <div class="panel-body">
            <div class="col-lg-12">
                <div class="dashboard-graph graph_chart" id="ChartNewProductsContainer">
                </div>
            </div>
        </div>
    </section>


    <section class="panel col-lg-6">
        <header class="panel-heading">
            New Suppliers
