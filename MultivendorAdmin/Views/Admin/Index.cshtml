            </div>
        </div>
    </section>

</div>

@section scripts
{   @Scripts.Render("~/bundles/highStockCore")
<script src="@Url.Content("~/Scripts/CustomHighCharts.js")"></script>


@if (Model.OrdersChart != null)
{
    <script type="text/javascript">
        $(function () {

            var OrderData = @Html.Raw(Json.Encode(Model.OrdersChart));
            CreateOrderChart(OrderData);

        });
    </script>
}


@if (Model.ProductsChart != null)
{
    <script type="text/javascript">
        $(function () {

            var NewUsersData = @Html.Raw(Json.Encode(Model.ProductsChart));
            CreateNewProductsChart(NewUsersData);

        });
    </script>
}


@if (Model.SuppliersChart != null)
{
    <script type="text/javascript">
        $(function () {

            var NewUsersData = @Html.Raw(Json.Encode(Model.SuppliersChart));
            CreateNewSuppliersChart(NewUsersData);

        });
    </script>
}


@if (Model.CustomersChart != null)
{
    <script type="text/javascript">
        $(function () {

            var NewUsersData = @Html.Raw(Json.Encode(Model.CustomersChart));
