@model List<MultivendorEcommerceStore.DB.ViewModel.CategoryListViewModel>

@{
    ViewBag.Title = "CategoryList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<link rel="stylesheet" href="~/Content/assets/data-tables/DT_bootstrap.css" />

<!--main content start-->
<section class="site-min-height">
    <!-- page start-->
    <section class="panel">
        <header class="panel-heading">
            Category List
        </header>

        <div class="panel-body">
            <h2 style="text-align:center">Category List For Display Order 1</h2>
            <hr />
            <div class="adv-table editable-table ">
                <div class="clearfix">
                    <div class="btn-group">
                        <a href="@Url.Action("AddCategory", "Admin")" class="btn btn-info">
                            Add New <i class="fa fa-plus"></i>
                        </a>
                    </div>
                    <div class="btn-group pull-right">
                        <button class="btn dropdown-toggle" data-toggle="dropdown">
                            Tools <i class="fa fa-angle-down"></i>
                        </button>
                        <ul class="dropdown-menu pull-right">
                            <li><a href="javascript:window.print()">Print</a></li>
                            <li><a href="#">Save as PDF</a></li>
                            <li><a href="#">Export to Excel</a></li>
                        </ul>
                    </div>
                </div>
                <div class="space15"></div>

                <div class="table-responsive">

                    <table class="table table-striped table-hover table-bordered" id="editable-sample" style="text-align:center">
                        <tbody>
                            @foreach (var Mainitem in Model)
                            {
                            <div class="col-md-12">

                                @foreach (var item in Mainitem.listCategoryEntity.Where(x => x.DisplayOrder == 1).ToList())
                                    {
                                    <div class="col-md-3">
                                        <h5><b><img class="icon-menu" alt="Funky roots" src="@Html.DisplayFor(modelItem => item.CategoryPicture)"> @Html.DisplayFor(modelItem => item.CategoryName)</b></h5>
                                    </div>

                                        foreach (var SubCat in @item.listSubCategoryEntity)
                                        {
                                    <div class="col-md-3">
                                        <h4>@Html.DisplayFor(modelItem => SubCat.SubCategoryName)</h4>
                                        <hr align="left" width="60%">
                                        @foreach (var SubCatitem in SubCat.listSubCategoryItemEntity)
                                                {
                                                <ul style="list-style-type:none">
                                                    <li>@Html.DisplayFor(modelItem => SubCatitem.SubCategoryItemName)</li>
                                                </ul>
                                                }


                                    </div>
                                        }


                                    }
                            </div>
                            }

                        </tbody>
                    </table>

                </div>
            </div>
        </div>

        <hr />

        <div class="panel-body">
            <h2 style="text-align:center">Category List For Display Order 2</h2>
            <div class="adv-table editable-table ">
                <div class="clearfix">
                    <div class="btn-group">
                        <a href="@Url.Action("AddCategory", "Admin")" class="btn btn-info">
                            Add New <i class="fa fa-plus"></i>
                        </a>
                    </div>
                    <div class="btn-group pull-right">
                        <button class="btn dropdown-toggle" data-toggle="dropdown">
                            Tools <i class="fa fa-angle-down"></i>
                        </button>
                        <ul class="dropdown-menu pull-right">
                            <li><a href="javascript:window.print()">Print</a></li>
                            <li><a href="#">Save as PDF</a></li>
                            <li><a href="#">Export to Excel</a></li>
                        </ul>
                    </div>
                </div>
                <div class="space15"></div>

                <div class="table-responsive">

                    <table class="table table-striped table-hover table-bordered" id="editable-sample" style="text-align:center">
                        <tbody>
                            @foreach (var Mainitem in Model)
                            {
                                <div class="col-md-12">

                                    @foreach (var item in Mainitem.listCategoryEntity.Where(x => x.DisplayOrder == 2).ToList())
                                    {
                                        <hr />
                                        <div class="col-md-3">
                                            <h5><b> @Html.DisplayFor(modelItem => item.CategoryName) <img class="icon-menu" alt="Funky roots" src="@Html.DisplayFor(modelItem => item.CategoryPicture)" width="50" height="80"> </b></h5>
                                        </div>

                                        foreach (var SubCat in @item.listSubCategoryEntity)
                                        {
                                            <div class="col-md-3">
                                                <ul @*style="list-style-type:none"*@>
                                                    <li>@Html.DisplayFor(modelItem => SubCat.SubCategoryName)</li>
                                                </ul>


                                            </div>
                                        }


                                    }
                                </div>
                            }
                        </tbody>
                    </table>

                </div>
            </div>
        </div>

    </section>
    <!-- page end-->
</section>
<!--main content end-->



