@model IEnumerable<MultivendorEcommerceStore.DB.ViewModel.CategoryListViewModel>

@{
    ViewBag.Title = "CategoryList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>CategoryList</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CategoryPicture)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CategoryName)
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.SubCategoryName)
        </th>*@
        <th>
            @Html.DisplayNameFor(model => model.SubCategoryItem)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DisplayOrder)
        </th>
        
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                <img class="img-thumbnail" src="@Url.Content(item.CategoryPicture)" height="25" width="25" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryName)
                >>
                @Html.DisplayFor(modelItem => item.SubCategoryName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SubCategoryItem)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DisplayOrder)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
            </td>
        </tr>
    }

</table>
