@model IEnumerable<MultivendorEcommerceStore.DB.ViewModel.CustomerListViewModel>

@{
    ViewBag.Title = "CustomerList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<!--vertical center Modal start-->
<div class="modal fade modal-dialog-center " id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog ">
        <div class="modal-content-wrap">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title">Delete Customer</h4>
                </div>
                <div class="modal-body">

                    Are you sure you want to delete this customer?

                </div>
                <div class="modal-footer">
                    <button data-dismiss="modal" class="btn btn-default" type="button">Close</button>
                    <button id="btnContinueDelete" class="btn btn-warning" type="button"> Confirm</button>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- vertical center Modal end -->


<!--main content start-->
<section class="site-min-height">
    <!-- page start-->
    <section class="panel">
        <header class="panel-heading">
            Customer's List
        </header>
        <div class="panel-body">
            <div class="adv-table editable-table ">
                <div class="clearfix">
                    <div class="btn-group">
                        <a href="@Url.Action("Login","Home")" class="btn btn-info">
                            Add New <i class="fa fa-plus"></i>
                        </a>
                    </div>
                    <div class="btn-group pull-right">
                        <button class="btn dropdown-toggle" data-toggle="dropdown">
                            Tools <i class="fa fa-angle-down"></i>
                        </button>
                        <ul class="dropdown-menu pull-right">
                            <li><a href="javascript:window.print()">Print</a></li>
                            <li><a href="#">Save as PDF</a></li>
                            <li><a href="#">Export to Excel</a></li>
                        </ul>
                    </div>
                </div>
                <div class="space15"></div>

                <div class="table-responsive">

                    <table class="table table-striped table-hover" id="editable-sample" style="text-align:center">
                        <thead>
                            <tr style="text-align:center">
                                <th style="text-align:center">
                                    @Html.DisplayName("First Name")
                                </th>
                                <th style="text-align:center">
                                    @Html.DisplayName("Last Name")
                                </th>
                                <th style="text-align:center">
                                    @Html.DisplayName("Email")
                                </th>
                                <th style="text-align:center">
                                    @Html.DisplayName("Added On")
                                </th>

                                <th style="text-align:center">Actions</th>
                            </tr>
                        </thead>

                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr id='CustomerToDelete_@item.AspNetUserID'>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.FirstName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.LastName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Email)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.CreatedOn)
                                    </td>

                                    <td>
                                        <a href="@Url.Action("EditCustomer", "Admin", new { CustomerID = item.CustomerID, UserID = item.AspNetUserID  })" class="btn btn-primary">
                                            <i class="fa fa-pencil"></i>
                                        </a>

                                        <a class="btn btn-danger UserToDelete" data-target="#myModal" data-toggle="modal" value="@item.AspNetUserID">
                                            <i class="fa fa-trash-o"></i>
                                        </a>
                                    </td>

                                </tr>
                            }
                        </tbody>

                    </table>

                </div>
            </div>
        </div>
    </section>
    <!-- page end-->
</section>
<!--main content end-->



@section Scripts{
    <script type="text/javascript">
        $('.UserToDelete').click(function () {
            var userId = $(this).attr("value");
            $("#btnContinueDelete").val(userId);
        });
        $('#btnContinueDelete').click(function () {
            var userId = $(this).attr("value");
            $.ajax({
                type: "POST",
                url: "/Admin/DeleteCustomer",
                data: { UserID: userId },
                success: function (data) {
                    if (data == "True") {
                        $("#myModal").modal("hide");
                        $("#CustomerToDelete_" + userId).remove();
                    }
                }
            });
        });

    </script>

}
