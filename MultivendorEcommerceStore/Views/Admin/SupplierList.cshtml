@model IEnumerable<MultivendorEcommerceStore.DB.ViewModel.SupplierListViewModel>

@{
    ViewBag.Title = "SupplierList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                <h4> Supplier's List </h4>
            </header>
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-striped" style="text-align:center">
                        <thead>
                            <tr style="text-align:center">
                                <th>
                                    @Html.DisplayName("First Name")
                                </th>
                                <th>
                                    @Html.DisplayName("Last Name")
                                </th>
                                <th>
                                    @Html.DisplayName("Email")
                                </th>
                                <th>
                                    @Html.DisplayName("Address")
                                </th>
                                <th>
                                    @Html.DisplayName("Country")
                                </th>
                                <th>
                                    @Html.DisplayName("State")
                                </th>
                                <th>
                                    @Html.DisplayName("City")
                                </th>
                                <th>
                                    @Html.DisplayName("PostalCode")
                                </th>
                                <th>
                                    @Html.DisplayName("Phone")
                                </th>
                                <th>
                                    @Html.DisplayName("ProfilePhoto")
                                </th>

                                @*<th><i class="fa fa-edit"></i> Status</th>*@
                                <th>Actions</th>
                            </tr>
                        </thead>

                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.FirstName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.LastName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Email)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Address)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Country)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.State)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.City)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.PostalCode)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.MobileNumber)
                                    </td>
                                    <td>
                                        <img class="img-thumbnail" src="@Url.Content(item.ProfilePhoto)" height="50" width="50" />
                                    </td>

                                    <td>
                                        <a href="@Url.Action("EditSupplier", "Admin", new { SupplierID = item.SupplierID, UserID = item.AspNetUserID  })" class="btn btn-primary">
                                            <i class="fa fa-pencil"></i>
                                        </a>

                                        <a href="@Url.Action("DeleteSupplier", "Admin", new { UserID = item.AspNetUserID })" class="btn btn-danger">
                                            <i class="fa fa-trash-o"></i>
                                        </a>
                                    </td>

                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </section>
    </div>
</div>