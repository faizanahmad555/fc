@model IEnumerable<MultivendorEcommerceStore.DB.ViewModel.SupplierListViewModel>

@{
    ViewBag.Title = "SupplierList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<!--vertical center Modal start-->
<div class="modal fade modal-dialog-center " id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog ">
        <div class="modal-content-wrap">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title">Delete Supplier</h4>
                </div>
                <div class="modal-body">

                    Are you sure you want to delete this supplier?

                </div>
                <div class="modal-footer">
                    <button data-dismiss="modal" class="btn btn-default" type="button">Close</button>
                    <button id="btnContinueDelete" class="btn btn-warning" type="button"> Confirm</button>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- vertical center Modal end -->


<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                <h4> Supplier's List </h4>
            </header>
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-striped" style="text-align:center">
                        <thead>
                            <tr style="text-align:center">
                                <th>
                                    @Html.DisplayName("First Name")
                                </th>
                                <th>
                                    @Html.DisplayName("Last Name")
                                </th>
                                <th>
                                    @Html.DisplayName("Email")
                                </th>
                                <th>
                                    @Html.DisplayName("Address")
                                </th>
                                <th>
                                    @Html.DisplayName("Country")
                                </th>
                                <th>
                                    @Html.DisplayName("State")
                                </th>
                                <th>
                                    @Html.DisplayName("City")
                                </th>
                                <th>
                                    @Html.DisplayName("PostalCode")
                                </th>
                                <th>
                                    @Html.DisplayName("Phone")
                                </th>
                                <th>
                                    @Html.DisplayName("ProfilePhoto")
                                </th>

                                @*<th><i class="fa fa-edit"></i> Status</th>*@
                                <th>Actions</th>
                            </tr>
                        </thead>

                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr id='SupplierToDelete_@item.AspNetUserID'>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.FirstName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.LastName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Email)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Address)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Country)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.State)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.City)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.PostalCode)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.MobileNumber)
                                    </td>
                                    <td>
                                        <img class="img-thumbnail" src="@Url.Content(item.ProfilePhoto)" height="50" width="50" />
                                    </td>

                                    <td>
                                        <a href="@Url.Action("EditSupplier", "Admin", new { SupplierID = item.SupplierID, UserID = item.AspNetUserID  })" class="btn btn-primary">
                                            <i class="fa fa-pencil"></i>
                                        </a>

                                        <a class="btn btn-danger UserToDelete" data-toggle="modal" data-target="#myModal" value="@item.AspNetUserID" >
                                            <i class="fa fa-trash-o"></i>
                                        </a>
                                    </td>

                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </section>
    </div>
</div>

@section Scripts{

<script type="text/javascript">
    $('.UserToDelete').click(function () {
            var userId = $(this).attr("value");
            $("#btnContinueDelete").val(userId);
        });
    $('#btnContinueDelete').click(function () {
        var userId = $(this).attr("value");
            $.ajax({
                type: "POST",
                url: "/Admin/DeleteSupplier",
                data: { UserID : userId },
                success: function (data) {
                    if (data == "True") {
                        $("#myModal").modal("hide");
                        $("#SupplierToDelete_" + userId).remove();
                    }
                }

            });
    });



</script>


}