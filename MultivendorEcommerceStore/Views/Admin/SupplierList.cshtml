@model IEnumerable<MultivendorEcommerceStore.DB.Model.Supplier>

@{
    ViewBag.Title = "SupplierList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                <h4> Supplier's List </h4>
            </header>
            <table class="table table-striped table-advance table-hover" style="text-align:center">
                <thead>
                    <tr style="text-align:center">
                        <th><i class="fa fa-bullhorn"></i> @Html.DisplayName("First Name")</th>
                        <th class="hidden-phone"><i class="fa fa-question-circle"></i> @Html.DisplayName("Last Name")</th>
                        <th><i class="fa fa-bookmark"></i> @Html.DisplayName("Email")</th>
                        <th>
                            @Html.DisplayName("Address")
                        </th>
                        <th>
                            @Html.DisplayName("Country")
                        </th>
                        <th>
                            @Html.DisplayName("State")
                        </th>
                        <th>
                            @Html.DisplayName("City")
                        </th>
                        <th>
                            @Html.DisplayName("PostalCode")
                        </th>
                        <th>
                            @Html.DisplayName("Phone")
                        </th>
                        <th>
                            @Html.DisplayName("ProfilePhoto")
                        </th>

                        @*<th><i class="fa fa-edit"></i> Status</th>*@
                        <th>Actions</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
                    {

                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.SupplierFirstName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.SupplierLastName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Email)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Address)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CountryID)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.StateID)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CityID)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PostalCode)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Phone)
                            </td>
                            <td>
                                <img class="img-thumbnail" src="@Url.Content(item.ProfilePhoto)" height="50" width="50" />
                            </td>

                            <td>
                                <a href="@Url.Action("EditSupplier", "Admin", new { SupplierID = item.SupplierID, UserID = item.AspNetUserID  })" class="btn btn-primary">
                                    <i class="fa fa-pencil"></i>
                                </a>

                                <a href="@Url.Action("DeleteSupplier", "Admin", new { UserID = item.AspNetUserID })" class="btn btn-danger">
                                    <i class="fa fa-trash-o"></i>
                                </a>
                            </td>

                        </tr>

                    }
                </tbody>

            </table>
        </section>
    </div>
</div>
