@model MultivendorEcommerceStore.DB.ViewModel.OrderViewModel

@{
    ViewBag.Title = "MyOrdersDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container">
    <h2>Order</h2>
    <table class="table table-striped table-hover">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Order.CustomerName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Order.CreatedOn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Order.Tax)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Order.Shipping)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Order.SubTotal)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Order.Total)
            </th>
        </tr>
        <tr>
            <td>
                @Html.DisplayFor(model => model.Order.CustomerName)
            </td>
            <td>
                @Html.DisplayFor(model => model.Order.CreatedOn)
            </td>
            <td>
                @Html.DisplayFor(model => model.Order.Tax)
            </td>
            <td>
                @Html.DisplayFor(model => model.Order.Shipping)
            </td>
            <td>
                @Html.DisplayFor(model => model.Order.SubTotal)
            </td>
            <td>
                @Html.DisplayFor(model => model.Order.Total)
            </td>
        </tr>
    </table>
    <h2>Order Details</h2>
    <table class="table table-striped table-hover">
        <tr>
            <th>
                Product
            </th>
            <th>
                Quantity
            </th>
            <th>
                Unit Price
            </th>
        </tr>
        @foreach (var item in Model.OrderDetail)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Product)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UnitPrice)
                </td>
            </tr>
        }
    </table>
</div>